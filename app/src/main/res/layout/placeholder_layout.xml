<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/thumbnail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/text_placeholder_1"
        android:layout_width="250dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:layout_margin="10dp"
        android:background="@color/background"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@id/thumbnail" />

    <View
        android:id="@+id/text_placeholder_2"
        android:layout_width="150dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:layout_margin="10dp"
        android:background="@color/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_placeholder_1" />

    <View
        android:id="@+id/text_placeholder_3"
        android:layout_width="250dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:layout_margin="10dp"
        android:background="@color/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_placeholder_2" />

    <View
        android:id="@+id/text_placeholder_4"
        android:layout_width="150dp"
        android:layout_height="@dimen/placeholderTextHeight"
        android:layout_margin="10dp"
        android:background="@color/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_placeholder_3" />

</androidx.constraintlayout.widget.ConstraintLayout>